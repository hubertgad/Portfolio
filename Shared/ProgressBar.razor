<div class="col-6 col-md-4 col-lg-3">
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: @Value%" aria-valuenow="@Value" aria-valuemin="0" aria-valuemax="100">@Name</div>
    </div>
</div>

@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public int Value { get; set; }
}